<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mt-3">コメント一覧</h3>
      <table class="table table-borderless">
        <tr>
        <th>ユーザーネーム</th>
        <th>コメント内容</th>
        <th></th>
        </tr>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.member.name %></td>
          <td><%= comment.comment_content %></td>
          <td><%= link_to "削除", admin_comment_path(comment.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>