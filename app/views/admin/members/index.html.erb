<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="mt-3">会員一覧</h5>
      <div style="overflow-x:auto;">
        <table class="table member_table">
          <tr>
            <th>会員ID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
          <% @members.each do |member| %>
          <tr style="border:none;">
            <td><%= member.id %></td>
            <td><%= link_to member.name, admin_member_path(member.id) %></td>
            <td><%= member.email %></td>
            <td>
              <% if member.is_deleted == false %>
                <b class="text-danger">有効</b>
              <% else %>
                <b>退会</b>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="row justify-content-center">
        <%= paginate @members %>
      </div>
    </div>
  </div>
</div>