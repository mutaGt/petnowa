<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mt-3">ログイン</h3>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
      <table style="border:none;">
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン",class: "btn btn-info mb-3" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>