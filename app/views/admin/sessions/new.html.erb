<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mt-3">ログイン</h3>
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="container">
          <div class="row">
            <div class="col-sm col-lg-3"><%= f.label :email, "メールアドレス", class: "col-12" %></div>
            <div class="col-sm col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %></div>
          </div>
        </div>
        
        <div class="container">
          <div class="row mt-2">
            <div class="col-sm col-lg-3"><%= f.label :password, "パスワード", class: "col-12" %></div>
            <div class="col-sm col-lg-3"><%= f.password_field :password, autocomplete: "current-password", class: "w-100" %></div>
          </div>
        </div>
        
        <div class="container">
          <div class="row mt-2">
            <div class="d-flex justify-content-center col-lg-5">
              <%= f.submit "ログイン",class: "btn btn-info mb-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>