<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
      <table style="border:none;">
        <h3 class="mt-3">タグ管理</h3>
        <thead>
          <tr>
            <td><%= f.label :name, "タグ名", class: "mr-3" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "新規追加", class: "btn btn-success ml-3" %></td>
          </tr>
        </thead>
        
        <% @tags.each do |tag| %>
        <tbody>
          <tr>
            <td><%= tag.name %></td>
            <td><%= link_to "削除", admin_tag_path(tag), method: :delete %></td>
          </tr>
        </tbody>
        <% end %>
        
      </table>
      <% end %>
    </div>
  </div>
</div>