<div class='container mt-5'>
  <div class='row'>
    <div class='col-10'>
      <h4>過去の投稿</h4>
        <% @reviews.each do |review| %>
        <div class="card">
          <div class="card-body">
            <table class="table">
              <td><%= review.evaluation %></td>
              <td><%= review.product_name %></td>
              <td><%= review.title %></td>
              <td><%= review.tags.name %></td>
              <td><%= review.review_content %></td>
              <td><%= link_to "編集", edit_review_path(review.id) %></td>
              <td><%= link_to "削除", review_path(member.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </table>
          </div>
        </div>
        <% end %>
      </div>
  </div>
</div>

