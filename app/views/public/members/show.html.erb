<div class="container mt-5">
  <div class="row">
     <h1>マイページ</h1>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover table-inverse">
        <tr>
          <% if @member.image.attached? %>
          <td>アイコン</td>
            <div class='row'>
              <div class='col-pl-2'>
                <%= image_tag @member.image, size: "100x100" %>
              </div>
          <% end %>
        </tr>
        <tr>
         <td>ユーザーネーム</td>
         <td><%= @member.name %></td>
        </tr>
        <tr>
         <td>メールアドレス</td>
         <td><%= @member.email %></td>
        </tr>
       </table>
       <div class="row">
        <h5 class="mt-3">登録情報</h5>
          <div class="col mt-3 mb-2">
           <%= link_to "編集する",  members_information_edit_path , class: "btn btn-outline-success" %>
          </div>
      </div>
    </div>     
  </div>
  <div class="row">
      <h5>過去の投稿</h5>
      <div class="col-3">
        <%= link_to "一覧を見る", members_reviews_path , class: "btn btn-outline-warning"%>
      </div>
    </div>
</div>