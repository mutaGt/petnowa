<h1>編集画面</h1>
<div class='container mt-5'>
  <div class='row pl-5 ml-5'>
    <%= form_with model: @member, url: members_information_path(@member.id), method: :patch do |f| %>
    <div class="form-group row">
      <div class="col-8 text">
        <label>アイコン</label>
        <%= f.file_field :image, accept: 'image/*' %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :name, "ユーザーネーム" , class: "col-12" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :email, "メールアドレス" , class: "col-12" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :password, "パスワード" , class: "col-12" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード確認用" , class: "col-12" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="actions">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>