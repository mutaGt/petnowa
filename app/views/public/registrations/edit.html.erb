<div class='container'>
  <div class="row">
    <div class="col">
      <h5 class="mt-3">ユーザー情報編集</h5>
        <%= form_with model: @member, url: members_path, method: :patch do |f| %>
          <div class="container">
            <div class="row">
              <div class="col-sm col-md-5 col-lg-3"><%= f.label :image, "アイコン", class: "col-12" %>
                <% if @member.image.attached? %>
                   <%= image_tag @member.image, size: "90x90" %>
                <% end %>
              </div>
              <div class="col-sm col-md-5 mt-3"><%= f.file_field :image, accept: 'image/*' %></div>
            </div>
            
            <div class="row mt-2">
              <div class="col-sm col-md-5 col-lg-3"><%= f.label :name, "ユーザーネーム", class: "col-12" %></div>
              <div class="col-sm col-md-5 col-lg-4"><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %></div>
            </div>
            
            <div class="row mt-2">
              <div class="col-sm col-md-5 col-lg-3"><%= f.label :email, "メールアドレス", class: "col-12" %></div>
              <div class="col-sm col-md-5 col-lg-4"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %></div>
            </div>
            
            <div class="d-flex justify-content-center mt-3 col-lg-8">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>