<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="mt-3">新規会員登録</h5>
      <%= form_with model: @member, url: member_registration_path do |f| %>
        <% if @member.errors.any? %>
          <%= @member.errors.count %>件のエラーが発生しました
          <ul>
            <li><%= @member.errors.full_messages_for(:image).first %></li>
            <li><%= @member.errors.full_messages_for(:name).first %></li>
            <li><%= @member.errors.full_messages_for(:email).first %></li>
            <li><%= @member.errors.full_messages_for(:password).first %></li>
            <li><%= @member.errors.full_messages_for(:password_confirmation).first %></li>
          </ul>
        <% end %>
        
        <div class="container">
          <div class="row">
            <div class="col-sm col-md-5 col-lg-3"><%= f.label :image, "アイコン", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.file_field :image, accept: "image/*", class: "w-100"  %></div>
          </div>
          <div class="row mt-2">
            <div class="col-sm col-md-5 col-lg-3"><%= f.label :name, "ユーザーネーム", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100"  %></div>
          </div>
          <div class="row mt-2">
            <div class="col-sm col-md-5 col-lg-3"><%= f.label :email, "メールアドレス", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100"  %></div>
          </div>
          <div class="row mt-2">
            <div class="col-sm col-md-5 col-lg-3"><%= f.label :password, "パスワード(6文字以上)", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.password_field :password, autocomplete: "new-password", class: "w-100"  %></div>
          </div>
          <div class="row mt-2">
            <div class="col-sm col-md-5 col-lg-3"><%= f.label :password_confirmation, "パスワード確認用", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %></div>
          </div>
          <div class="d-flex justify-content-center mt-3 col-lg-8">
            <%= f.submit "新規登録", class: "btn btn-success mb-3" %>
          </div>
        </div>
      <% end %>
      
      <div class="d-flex justify-content-center col-lg-8">登録済みの方は</div>
      <div class="d-flex justify-content-center col-lg-8"><%= link_to "こちら", new_member_session_path %>からログインしてください</div>
    </div>
  </div>
</div>
