<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @comment, url: review_comments_path, method: :post do |f| %>
        <h5 class="mt-3">コメント投稿</h5>
        <% if @comment.errors.any? %>
          <%= @comment.errors.count %>件のエラーが発生しました
          <ul>
            <% @comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="container">
          <div class="row">
            <div  class="col-sm col-md-5 col-lg-3"><%= f.label :comment_content, "コメント入力はこちら", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.text_area :comment_content, size: "37x6" %></div>
          </div>
          
          <div class="d-flex justify-content-center mt-1 col-lg-9">
            <%= f.submit "投稿する", class: "btn btn-warning" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>