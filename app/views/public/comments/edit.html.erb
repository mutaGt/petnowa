<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @comment, url: review_comment_path(@comment.review_id,@comment.id), method: :patch do |f| %>
        <h5 class="mt-3">コメント編集</h5>
        <div class="container">
          <div class="row">
            <div  class="col-sm col-md-5 col-lg-3"><%= f.label :comment_content, "コメント入力はこちら", class: "col-12" %></div>
            <div class="col-sm col-md-5"><%= f.text_area :comment_content, size: "37x6" %></div>
          </div>
          
          <div class="d-flex justify-content-center mt-1 col-lg-9">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>