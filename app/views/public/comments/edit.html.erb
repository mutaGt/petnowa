<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @comment, url: reviews_path(@comment.id), method: :patch do |f| %>
      <table style="border:none;">
        <h3 class="mt-3">コメント編集</h3>
        <tr>
          <td><%= f.label :comment_content, "コメント", class: "col-12" %></td>
        </tr>
        <tr>
          <td><%= f.text_area :comment_content %></td>
        </tr>
        <tr>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>