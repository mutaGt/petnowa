<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="mt-3">ログイン</h3>
      <%= form_with model: @member, url: member_session_path do |f| %>
      <table style="border:none;">
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>

        <% if devise_mapping.rememberable? %>
        <tr>
          <td><%= f.check_box :remember_me %>
          <%= f.label :remember_me %></td>
        </tr>
        <% end %>
        
        <tr>
          <td></td>
          <td><%= f.submit "ログイン",class: "btn btn-info mb-3" %></td>
        </tr>
          

      </table>
      <div class="mb-1">会員登録がお済みでない方</div>
          <%= link_to "こちら", new_member_registration_path %>から新規登録を行ってください

      <% end %>
    </div>
  </div>
</div>