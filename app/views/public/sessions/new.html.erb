<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="mt-3">ログイン</h5>
      <%= form_with model: @member, url: member_session_path do |f| %>
        <div class="container">
          <div class="row">
            <div class="col-sm col-md-4 col-lg-3 mt-2"><%= f.label :email, "メールアドレス" %></div>
            <div class="col-sm col-md-4 col-lg-3 mt-2"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></div>
          </div>
          
          <div class="row">
            <div class="col-sm col-md-4 col-lg-3 mt-2"><%= f.label :password, "パスワード" %></div>
            <div class="col-sm col-md-4 col-lg-3 mt-2"><%= f.password_field :password, autocomplete: "current-password", class: "col-12" %></div>
          </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を保存" %>
          </div>
        <% end %>
        </div>
        
        <div class="container">
          <div class="row">
            <div class="d-flex justify-content-center col-md-7 col-lg-5">
              <%= f.submit "ログイン",class: "btn btn-info mb-3 login-button" %>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-1 col-md-7 col-lg-5">会員登録がお済みでない方は</div>
        <div class="d-flex justify-content-center col-md-7 col-lg-5"><%= link_to "こちら", new_member_registration_path %>から新規登録を行ってください</div>
      <% end %>
    </div>
  </div>
</div>
