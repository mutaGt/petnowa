<div class="container">
  <div class="row">
    <div class="col">
    <h3 class="mt-3">(検索結果全<%= @reviews.count %>件)</h3>
    <div class="d-flex justify-content-center">
      <% @reviews.each do |review| %>
      <div class="card">
        <div class="card-body">
          
          <div class="row">
            <div class="col">
              <%= image_tag review.member.image, size: "50x50" %>
              <%= review.member.name %>
              <%= review.product_name %>
              <%= review.title %>
              <% review.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </div>
          </div>
          
          <div class="row">
            <div class="col">
              <%= review.evaluation %>
              <%= review.review_content %>
            </div>
          </div>
          
          <div class="row">
            <div class="col">
              <%= link_to "コメント", review_path(review.id) %>
            </div>
          </div>
            
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
