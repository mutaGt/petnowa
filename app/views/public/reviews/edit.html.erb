<div class="container">
  <div class="row mt-3">
    <div class="col">
      <h3>レビュー編集</h3>
      <% form_with model: @review, url: reviews_path(@review.id), method: :patch do |f| %>
      <table style="border:none;">
        <tr>
          <td><%= f.label :product_name, "商品名" %></td>
          <td><%= f.text_field :product_name, autofocus: true %></td>
        </tr>
        
        <tr>
          <td><%= f.label :title, "タイトル" %></td>
          <td><%= f.text_field :title, autofocus: true %></td>
        </tr>
        
        <tr>
          <td><%= f.label "タグ" %></td>
          <td></td>
        </tr>
        
        <tr>
          <td><%= f.label "評価" %></td>
          <td></td>
        </tr>
        
        <tr>
          <td><%= f.label :review_content, "コメント内容" %></td>
          <td><%= f.text_area :review_content, autofocus: true, size: "30x20" %></td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
      
    </div>
  </div>
</div>