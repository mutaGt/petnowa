<div class="container">
  <div class="row">
    <div class="col">
    <%= form_with model: @review, url: reviews_path, method: :post do |f| %>
      <table style="border:none;">
        <h3 class="mt-3">レビュー投稿</h3>
        <tr>
          <td><%= f.label :product_name, "商品名", class: "col-12" %></td>
          <td><%= f.text_field :product_name, autofocus: true %></td>
        </tr>
        
        <tr>
          <td><%= f.label :title, "タイトル", class: "col-12" %></td>
          <td><%= f.text_field :title, autofocus: true %></td>
        </tr>
        
        <tr>
          <td><%= f.label "タグ", class: "col-12" %></td>
          <td>
              <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
              <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                  <%= tag.check_box class: 'form-check-input' %>
                  <%= tag.text %>
                <% end %>
              </div>
              <% end %>
          </td>
        </tr>
        
        <tr>
          <td><%= f.label "評価" , class: "col-12" %></td>
          <td><%= f.radio_button :evaluation, '1点' %>
              <%= f.label :evaluation, '1点', value: 1 %>
              <%= f.radio_button :evaluation, '2点' %>
              <%= f.label :evaluation, '2点', value: 2 %>
              <%= f.radio_button :evaluation, '3点' %>
              <%= f.label :evaluation, '3点', value: 3 %>
              <%= f.radio_button :evaluation, '4点' %>
              <%= f.label :evaluation, '4点', value: 4 %>
              <%= f.radio_button :evaluation, '5点' %>
              <%= f.label :evaluation, '5点', value: 5 %></td>
        </tr>

        <tr>
          <td><%= f.label :review_content, "レビュー内容" , class: "col-12" %></td>
          <td><%= f.text_area :review_content, autofocus: true, size: "30x10" %></td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "投稿する", class: "btn btn-warning" %></td>
        </tr>
        
      </table>
    <% end %>
    </div>
  </div>
</div>



