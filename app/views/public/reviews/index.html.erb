<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="mt-3">レビュー一覧</h5>
      <%= form_tag(search_reviews_path, :method => :get) do %>
        <%= text_field_tag :word %>
        <%= submit_tag "検索", class: "btn btn-success" %>
        <ul class="search-ul">
          <% Tag.all.each do |tag| %>
            <li class="search-li"><%= check_box :tag_ids, tag.id %><%= tag.name %></li>
          <% end %>
        </ul>
      <% end %>
      <% @reviews.each do |review| %>
            <table class="table border:none;">
              <tr>
                <th></th>
                <th></th>
                <th>商品名</th>
                <th>タイトル</th>
                <th>タグ</th>
                <th>評価</th>
                <th>レビュー内容</th>
                <th></th>
              </tr>
              
              <tr>
                <%if review.member.image.attached? %>
                  <td><%= image_tag review.member.image, size: "50x50" %></td>
                <%else%>
                  <td><%=image_tag "no_image.jpg", size: "50x50"%></td>
                <%end%>
                <td><%= review.member.name %></td>
                <td><%= review.product_name %>
                <!--楽天APIで持ってきた画像を表示↓-->
                <%= image_tag review.image_url, size: "85x85" %>
                <td><%= review.title %></td>
                <td><% review.tags.each do |tag| %>
                ・<%= tag.name %><br>
                <% end %></td>
                <td><%= review.evaluation %>点</td>
                <td><%= review.review_content %></td>
                <td><%= link_to "コメント一覧", review_path(review.id) %></td>
              </tr>
            </table>
      <% end %>
      <div class="row justify-content-center">
      <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>