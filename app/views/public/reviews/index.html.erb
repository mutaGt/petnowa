<div class="container">
  <div class="row mt-3">
    <div class="col-md-12 col-12">
      <table class="border:none;">
        <tr>
          <td>
          <%= form_tag(reviews_search_path, :method => :get) do %>
            <%= text_field_tag :word %>
            <%= submit_tag "検索", class: "btn btn-success" %>
            <ul class="search-ul">
              <% Tag.all.each do |tag| %>
                  <li class="search-li"><%= check_box :tag_ids, tag.id %><%= tag.name %></li>
              <% end %>
            </ul>
          <% end %>
          </td>
        </tr>
        <tr>
          <td>
          </td>
        </tr>
      </table>
      
      <h3 class="mt-3">レビュー一覧</h3>
      <% @reviews.each do |review| %>
      <div class="d-flex justify-content-center">
        <div class="card">
          <div class="card-body">
            
            <div class="row">
              <div class="col">
                <%= image_tag review.member.image, size: "50x50" %>
                <%= review.member.name %>
                <%= review.product_name %>
                <%= review.title %>
                <% review.tags.each do |tag| %>
                <%= tag.name %>
                <% end %>
              </div>
            </div>
            
            <div class="row">
              <div class="col">
                <%= review.evaluation %>
                <%= review.review_content %>
              </div>
            </div>
            
            <div class="row">
              <div class="col">
                <%= link_to "コメント", review_path(review.id) %>
              </div>
            </div>
            
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>